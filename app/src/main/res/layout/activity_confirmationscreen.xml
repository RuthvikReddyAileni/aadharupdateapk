<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmationscreen"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Received Details :"
            android:textColor="@color/black"
            android:fontFamily="@font/andada"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/housenum"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textColor="@color/black"

            android:layout_marginTop="10dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/andada"
            android:hint="House Number / Apartment number "
            android:inputType="text"
            android:textColorHint="#7C7878" />
        <EditText
            android:id="@+id/landmark"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/andada"
            android:hint="Landmark / Apartment name "
            android:inputType="text"
            android:textColorHint="#7C7878" />
        <EditText
            android:id="@+id/streetname"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background"
            android:textColor="@color/black"
            android:ems="10"
            android:fontFamily="@font/andada"
            android:hint="Street name "
            android:inputType="text"
            android:textColorHint="#7C7878" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center|start"
            android:layout_marginTop="10dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/andada"
            android:hint="State"
            android:textColor="@color/black"
            android:inputType="text"
            android:textColorHint="#7C7878" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Verification :"
            android:textColor="@color/black"
            android:fontFamily="@font/andada"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Click to give access for gps usage"
            android:fontFamily="@font/andada"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/clickscreen"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/andada"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9C9898"
            android:text="Click here"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/update"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/andada"
            android:text="Update Address"
            android:textColor="#9C9898">

        </Button>
    </LinearLayout>
</ScrollView>