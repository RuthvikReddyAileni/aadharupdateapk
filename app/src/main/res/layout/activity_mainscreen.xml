<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen"
    android:background="@color/white"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:text="Enter Aadhar Number : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/aadharnum"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/background"
            android:ems="10"
            android:fontFamily="@font/andada"
            android:hint="Enter your aadhar number "
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#817D7D" />

        <TextView
            android:id="@+id/heading2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:text="Upload address proof : "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/capture"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/andada"
                android:text="camera"
                android:textColor="@color/black"
                app:backgroundTint="#C8C1C1" />
            <Button
                android:id="@+id/gallery"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/andada"
                android:text="gallery"
                android:textColor="@color/black"
                app:backgroundTint="#C8C1C1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imaage"
            android:layout_width="362dp"
            android:layout_height="226dp"
            android:layout_marginTop="10dp"
            tools:srcCompat="@tools:sample/avatars" />
        <Button
            android:id="@+id/submit"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/andada"
            android:text="Submit"
            android:textColor="@color/black"
            app:backgroundTint="#C8C1C1" />

        <TextView
            android:id="@+id/detected"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aclonica"/>
    </LinearLayout>

</ScrollView>